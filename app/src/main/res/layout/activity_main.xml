<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_main"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="#855E53"
        android:text="Cappuccino"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_return"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:tint="@color/white"
        />

    <ImageView
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintTop_toBottomOf="@+id/text_main"
        app:layout_constraintEnd_toStartOf="@id/image_hearth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_time"
        android:id="@+id/image_clock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:tint="#855E53"
        />
    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintTop_toBottomOf="@+id/image_clock"
        app:layout_constraintStart_toStartOf="@+id/image_clock"
        app:layout_constraintEnd_toEndOf="@id/image_clock"
        android:layout_marginTop="5dp"

        />
    <ImageView
        android:src="@drawable/ic_heart"
        app:layout_constraintStart_toEndOf="@+id/image_clock"
        app:layout_constraintTop_toTopOf="@id/image_clock"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/image_hearth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:tint="#855E53"
        />
    <TextView
        android:id="@+id/text_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45435"
        app:layout_constraintTop_toBottomOf="@+id/image_hearth"
        app:layout_constraintStart_toStartOf="@+id/image_hearth"
        app:layout_constraintEnd_toEndOf="@id/image_hearth"
        android:layout_marginTop="5dp"

        />

    <View
        android:id="@+id/view_separator"
        android:layout_width="370dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_time"
        android:background="#855E53"
        />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Uma Simples e perfeitamente extraida dose de espresso misturado com leite fresco e chocolate fazem esta bebida deliciosa."
        app:layout_constraintTop_toBottomOf="@+id/view_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        />


    <TextView
        android:id="@+id/text_title_ingredientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingredientes"
        app:layout_constraintTop_toBottomOf="@+id/text_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/image_indicator_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_right"
        app:layout_constraintTop_toBottomOf="@+id/text_title_ingredientes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:tint="#855E53"
        />
    <TextView
        android:id="@+id/text_Items1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 dose espresso"
        app:layout_constraintStart_toEndOf="@+id/image_indicator_1"
        app:layout_constraintTop_toTopOf="@+id/image_indicator_1"
        app:layout_constraintBottom_toBottomOf="@+id/image_indicator_1"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/image_indicator_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_right"
        app:layout_constraintTop_toBottomOf="@+id/text_Items1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:tint="#855E53"
        />
    <TextView
        android:id="@+id/text_Items2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100ml leite"
        app:layout_constraintStart_toEndOf="@+id/image_indicator_2"
        app:layout_constraintTop_toTopOf="@+id/image_indicator_2"
        app:layout_constraintBottom_toBottomOf="@+id/image_indicator_2"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/image_indicator_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_right"
        app:layout_constraintTop_toBottomOf="@+id/text_Items2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:tint="#855E53"
        />
    <TextView
        android:id="@+id/text_Items3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 colher de chocolate em pÃ³"
        app:layout_constraintStart_toEndOf="@+id/image_indicator_3"
        app:layout_constraintTop_toTopOf="@+id/image_indicator_3"
        app:layout_constraintBottom_toBottomOf="@+id/image_indicator_3"
        android:gravity="center"
        />
    

</androidx.constraintlayout.widget.ConstraintLayout>